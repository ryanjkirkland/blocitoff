<% current_user.items.each do |item| %>
  <div class="col-md-3"></div>
  <div id="<%= item.id %>" class="task-area">
    <h2 class="task"><%= item.name %></h2>
    <%= link_to "Delete Item", [current_user, item], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'}, remote: :true %>
  </div>
<% end %>
